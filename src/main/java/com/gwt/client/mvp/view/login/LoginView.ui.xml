<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
<ui:with type="com.gwt.client.i18n.Message" field="i18n"/>
<g:HorizontalPanel width="100%" height="100%">
    <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
        <g:VerticalPanel spacing="10">
            <g:FlowPanel>
                <g:Label text="{i18n.login}" styleName="label"/>
                <g:TextBox ui:field="loginBox" styleName="input"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label text="{i18n.password}" styleName="label"/>
                <g:VerticalPanel>
                    <g:PasswordTextBox ui:field="passwordBox" styleName="input"/>
                    <g:Button ui:field="buttonSubmit" text="{i18n.submit}" styleName="button"/>
                </g:VerticalPanel>
            </g:FlowPanel>
        </g:VerticalPanel>
    </g:cell>
</g:HorizontalPanel>

</ui:UiBinder>